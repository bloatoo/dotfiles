[module/bspwm]
type = internal/bspwm
format = <label-state>
label-occupied-foreground = #d8d8d8
label-occupied-background = #181818
label-focused-foreground = #d8d8d8
label-focused-background = #282828
label-empty-foreground = #d8d8d8
label-empty-background = #181817
label-focused = %name%
label-occupied = %name%
label-empty = %name%
label-focused-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
format-muted = <label-muted>
label-muted = "    Muted  "
label-volume = "    %percentage%%  "
format-volume-background = #f7ca88
format-volume-foreground = #181818
format-muted-background = #f7ca88
format-muted-foreground = #181818

[module/wifi]
type = internal/network
